@page "/add-new-verse" 
<div class="row mt-3">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <div class="card-title">ADD NEW VERSE</div>
                <hr>
                <EditForm Model="createForm">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="form-group">
                        <label>Date</label>
                        <InputDate  class="form-control"  @bind-Value="createForm.Date" />
                    </div>
                    <div class="form-group">
                        <label>Book</label>
                        <InputText class="form-control" @bind-Value="createForm.Book"  />
                    </div>
                    <div class="form-group">
                        <label>Passage</label>
                        <InputTextArea @bind-Value="createForm.Content" style="height:150px;" class="form-control" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-light w-100">Submit</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>

   
</div>


@code {
    private CreateVerseViewModel createForm = new CreateVerseViewModel();
}
